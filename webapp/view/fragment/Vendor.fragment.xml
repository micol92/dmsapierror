<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:ui="sap.ui.table" 
    xmlns:core="sap.ui.core">
    <Dialog id="vendorDialog" title="Select Vendor" contentHeight="450px" contentWidth="500px">
        <content>
            <Toolbar>
                <OverflowToolbar>
                    <SearchField id="vendorSearch" placeholder="Search Vendor" search=".onvendorSearch" width="300px" class="sapUiSmallMarginBeginEnd" />
                    <ToolbarSpacer />
                </OverflowToolbar>
            </Toolbar>

            <Table id="vendorTable" items="{path:'vendorModel>/'}"   mode="SingleSelectLeft">
                <columns>
                    <Column width="100%">
                        <Text text="Vendor" />
                    </Column>
                </columns>
                <ColumnListItem>
                    <cells>
                        <Text text="{vendorModel>vendor}" />
                    </cells>
                </ColumnListItem>
            </Table>
        </content>

        <beginButton>
            <Button text="Confirm" type="Emphasized" press="onVendorSave" />
        </beginButton>
        <endButton>
            <Button text="Cancel" type="Transparent" press="onVendorCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
